<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <title>Post <%= post.id %> detail</title>
</head>
<body>
    <a href="/posts" class="btn btn-primary m-3">Back to posts</a>
    <div class="container p-3 d-flex flex-column align-items-center border border-secondary rounded-2 bg-light">
        <h1><%= post.title %></h1>
        <p class="card-subtitle mb-2 text-body-secondary"><strong>By: </strong> <%= post.author.fullName %></p>
        <p><%= post.body %></p>
        <small class="text-muted"><strong>Updated:</strong> <%= post.updatedAt %></small>
        <small class="text-muted"><strong>Created:</strong> <%= post.createdAt %></small>
        <div class="d-flex gap-2 mt-3">
            <a href="/posts/update/<%= post.id %>" class="btn btn-primary">Edit</a>
            <a href="/posts/delete/<%= post.id %>" class="btn btn-danger">Delete</a>
        </div>
        <div class="align-self-start">
            <a href="#" class="btn btn-primary">Add comment</a>
        </div>
        <div class="mt-3 flex flex-column gap-2">
            <% if (post.comments.length > 0) { %>
                <h3>Comments</h3>
                <div class="d-flex flex-column gap-3">
                    <% post.comments.forEach(comment => { %>
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <% if (comment.imageUrl) { %>
                                    <img src="<%= comment.imageUrl %>" class="img-fluid rounded-start" alt="...">
                                <% } %>
                            </div>
                            <div class="col-md-8">
                                <div class="card-header"><strong>By:</strong> <%= comment.author.fullName %></div>
                                <div class="card-body">
                                    <h5 class="card-title"><%= comment.title %></h5>
                                    <p class="card-text"><%= comment.content %></p>
                                    <p class="card-text"><small class="text-body-secondary">Created at: <%= comment.createdAt %></small></p>
                                    <p class="card-text"><small class="text-body-secondary">Updated at: <%= comment.updatedAt %></small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            <% } else { %>
                <h5>No comments yet!</h5>
            <% } %>
        </div> 
    </div>
</body>
</html>